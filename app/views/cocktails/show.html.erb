<h1><%= @cocktail.name %></h1>
<% @cocktail.doses.each do |dose| %>
  <p>
    <%= dose.ingredient.name %>: <%= dose.description %>
  <%= link_to dose_path(dose), method: :delete, data: { confirm: "Do you want to delete?"} do %>
    <i class="fa fa-trash destroy_dose"></i>
  <% end %>
<% end %>
<br></br>
<%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %>

<br></br>
<%= link_to "Back to Main Page", cocktails_path %>
